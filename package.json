{
  "name": "naukri-platform",
  "version": "1.0.0",
  "description": "Full-stack job portal platform",
  "main": "server.js",
  "scripts": {
    "start": "node backend/server.js",
    "dev": "nodemon backend/server.js",
    "client": "npm start --prefix frontend",
